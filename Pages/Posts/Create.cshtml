@page
@model MyBlog.Pages.Posts.CreateModel

<h2>Create New Post</h2>

<form method="post">
    <div>
        <label for="Title">Title</label>
        <input asp-for="Post.Title" class="form-control" />
        <span asp-validation-for="Post.Title" class="text-danger"></span>
    </div>
    <div>
        <label for="Content">Content</label>
        <textarea asp-for="Post.Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Post.Content" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Post.CategoryId">Category</label>
        <select asp-for="Post.CategoryId" asp-items="@(new SelectList(Model.Categories, "Id", "Name"))">
            <option value="">Select a category</option>
        </select>
        <span asp-validation-for="Post.CategoryId" class="text-danger"></span>
    </div>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <button type="submit">Create</button>
</form>
