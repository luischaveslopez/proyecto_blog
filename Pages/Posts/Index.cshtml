@page
@model MyBlog.Pages.Posts.IndexModel
@{
    ViewData["Title"] = "Posts";
}

<h2>Posts</h2>

<form>
    <p>
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Content</th>
            <th>Category</th>
            <th>Actions</th> <!-- New column for actions -->
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.Content</td>
                <td>@post.Category?.Name</td>
                <!-- Add additional fields as necessary -->
                <td>
                    <a asp-page="/Posts/Details" asp-route-id="@post.Id" class="btn btn-primary">Details</a>
                    
                    <a asp-page="/Posts/Edit" asp-route-id="@post.Id" class="btn btn-secondary">Edit</a>
                    <a asp-page="/Posts/Delete" asp-route-id="@post.Id" class="btn btn-danger">Delete</a>
               
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="/Posts/Create" class="btn btn-primary">Create New Post</a>
