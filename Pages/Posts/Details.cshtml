@page
@model MyBlog.Pages.Posts.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Post.Title</h2>

<p>
    <strong>Category:</strong> @Model.Post.Category?.Name
</p>

<p>
    <strong>Content:</strong> @Model.Post.Content
</p>

<p>
    <a asp-page="./Edit" asp-route-id="@Model.Post.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</p>
